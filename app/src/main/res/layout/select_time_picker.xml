<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.loper7.date_time_picker.DateTimePicker
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/dateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout="@layout/layout_date_picker_point"
        app:showLabel="true"
        app:textSize="16sp"
        app:themeColor="#FF8080"/>
    <Button
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTimePicker"
        android:id="@+id/common_cancel"
        android:layout_marginEnd="64dp"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="取消"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/dateTimePicker"
        app:layout_constraintLeft_toRightOf="@id/common_cancel"
        android:id="@+id/confirm_time_select"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="确定"/>
</androidx.constraintlayout.widget.ConstraintLayout>