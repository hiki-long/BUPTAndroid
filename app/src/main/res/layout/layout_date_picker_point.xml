<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.loper7.date_time_picker.number_picker.NumberPicker
        android:id="@+id/np_datetime_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:internalLayout="@layout/number_picker_with_selector_wheel"
        app:internalMaxHeight="184dp"
        app:internalMinWidth="60dp"
        app:selectionDivider="#E5E5E5"
        app:selectionDividerHeight="0.6dp"
        app:solidColor="#00000000"
        app:virtualButtonPressedDrawable="#00000000" />

    <TextView
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/np_datetime_hour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:textColor="#999999"
        android:text=":"/>
    <com.loper7.date_time_picker.number_picker.NumberPicker
        android:id="@+id/np_datetime_minute"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/np_datetime_hour"
        android:layout_height="wrap_content"
        app:internalLayout="@layout/number_picker_with_selector_wheel"
        app:internalMaxHeight="184dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:internalMinWidth="60dp"
        app:selectionDivider="#E5E5E5"
        app:selectionDividerHeight="0.6dp"
        app:solidColor="#00000000"
        app:virtualButtonPressedDrawable="#00000000" />

</LinearLayout>